<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Банкомат" Height="450" Width="800">
    <Grid Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}">
        <Rectangle HorizontalAlignment="Left" Height="236" Margin="37,23,0,0" Stroke="Black" VerticalAlignment="Top" Width="393">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF467D22" Offset="0"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,23,10,0" HorizontalAlignment="Right" Width="305" Height="164" VerticalAlignment="Top"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="81,298,0,0" VerticalAlignment="Top" Height="41" Width="68"/>
        <TextBlock x:Name="Balance" HorizontalAlignment="Left" Margin="142,32,0,0" TextWrapping="Wrap" TextAlignment="Center"  Text="Баланс: 10000" VerticalAlignment="Top" Height="31" Width="183" FontWeight="Medium" FontSize="20">
            <TextBlock.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFAF5E5E" Offset="0.012"/>
                </LinearGradientBrush>
            </TextBlock.Background>
        </TextBlock>
        <Button x:Name="output" Content="Снять" HorizontalAlignment="Left" Margin="349,122,0,0" VerticalAlignment="Top" Height="29" Width="51"/>
        <Button x:Name="input" Content="Внести" HorizontalAlignment="Left" Margin="81,122,0,0" VerticalAlignment="Top" Height="29" Width="51"/>
        <Button x:Name="back" Content="Назад" HorizontalAlignment="Left" Margin="45,28,0,0" VerticalAlignment="Top" Height="29" Width="51"/>





    </Grid>
</Window>
